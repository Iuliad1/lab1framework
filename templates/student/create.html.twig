{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(task_form, {'attr': {'class': 'needs-validation'}}) }}

            {{ form_row(task_form.title, {'attr': {'class': 'form-control', 'placeholder': 'Type your name'}}) }}
            {{ form_row(task_form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(task_form.createdAt, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(task_form.category, {'attr': {'class': 'form-select'}}) }}
            

            {{ form_end(task_form) }}
        </div>
    </div>
</div>


{% endblock %}
