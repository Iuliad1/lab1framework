{% extends 'base.html.twig' %}

{% block body %}
    <div class="login-container" style="max-width: 400px; margin: auto; text-align: center;">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageData }}</div>
        {% endif %}
        <form action="{{ path('app_login') }}" method="post" class="login-form" style="margin-top: 20px;">
            <h1>Autentificare</h1>
            <div class="form-group">
                <label for="username" style="float: left; margin-right: 10px;">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label for="password" style="float: left; margin-right: 10px;">Password:</label>
                <input type="password" id="password" name="_password" class="form-control" placeholder="Enter your password">
            </div>
            {# Ruta către care va fi redirecționat utilizatorul după autentificarea reușită #}
            <input type="hidden" name="_target_path" value="/home">
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
{% endblock %}
